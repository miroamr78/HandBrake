#!/bin/sh

declare -ra PYTHON_VERS=("2.7" "2.6" "2.5" "2.4" "2" "")

inpath()
{
    local IFS=:
    for d in $PATH;do
        [[ -x "$d/$1" ]] && return 0
    done
    return 1
}

for p in ${PYTHON_VERS[@]};do
    if ( inpath $p ); then
        exec "python$p" "`dirname $0`/make/configure.py" "$@"
        exit 0
    fi
done

echo "ERROR: no suitable version of python found."
exit 1
